{
  "semi": false,
  "trailingComma": "none",
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": true,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "semi": false,
        "singleQuote": false
      }
    },
    {
      "files": "*.vue",
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": "*.js",
      "options": {
        "singleQuote": true
      }
    }
  ]
}